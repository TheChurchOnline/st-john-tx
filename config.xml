    <icon src="icon.png" />
    <splash src="res/screen/ios/splash.jpg" />
    <content src="index.html" />
    <access origin="*" subdomains="true" />
    <allow-navigation href="*" /><!-- render iframe content, iframe, ajax calls (API and logins) -->
